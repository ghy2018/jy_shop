package com.jy.shop.manager.service;

/**
 * 封装通用的 CRUD 操作
 * @author HXZY
 *
 */
public interface BaseService<T> {

	/**
	 * 新增
	 * 	全字段 SQL
	 * @param t
	 * @return
	 */
	boolean add(T t);
	
	/**
	 * 新增
	 * 	动态SQL
	 * @param t
	 * @return
	 */
	boolean addSelective(T t);
	
	/**
	 * 根据 id 删除指定记录
	 * @param id
	 * @return
	 */
	boolean removeById(Long id);
	
	boolean removeIds(List<Long> ids);
	
}
